{
    "manifest_version": 2,
    "name": "bkmrkr",
    "description": "Easily save and handle new book marks",
    "version": "1.0.0",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["http://localhost:3000/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "externally_connectable": {
        "matches": ["http://localhost:3000/*"]
    },
    "permissions": [
        "tabs"
    ]
}